<div class="container w-3/4 px-4 mx-autp">
  <div class="mt-7 text-center bg-dark max-w-4xl mx-auto">
    <h2 class="text-info p-3 md:text-4xl mb-2">
      <b>Search By Title Or Author</b>
    </h2>
    <form class="search mb-6 pb-3">
      <div class="form-group my-2">
        <label for="searchbar" class="text-white">Search:</label>
        <input
          type="text"
          class="form-control w-9/12 mx-auto mb-6"
          id="search-input"
          placeholder="Title or Author Name..."
        />
        <button class="btn btn-info btn-block">Search</button>
      </div>
    </form>
  </div>
  <div class="col-12 col-md-9 p-3 text-light">
    <h2>Showing results for <span id="result-text"></span></h2>
    <div id="result-content"></div>
  </div>
</div>
